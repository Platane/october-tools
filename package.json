{
    "name": "refinery-tools",
    "version": "0.4.1",

    "description": "Set of dev tools to inspect a refinery app.",
    "repository": "https://github.com/Platane/refinery",
    "files": [
        "dist/",
        "lib/"
    ],
    "main": "lib/web_modules/index.js",

    "dependencies": {
        "refinery-js": "^0.4.2",
        "dagre" : "*",
        "klayjs" : "^0.4.1",
        "react" : "15.x",
        "react-dom" : "15.x",
        "react-motion" : "0.4.x"
    },

    "devDependencies" : {
        "expect": "1.x",
        "mocha": "2.4",
        "webpack" : "1.x",
        "webpack-dev-server" : "*",
        "file-loader" : "0.8.x",
        "style-loader" : "0.13.x",
        "css-loader" : "0.23.x",
        "html-loader" : "0.4.x",
        "babel-loader" : "6.x",
        "babel-polyfill" : "6.x",
        "babel-core" : "6.x",
        "babel-cli" : "6.x",
        "babel-preset-es2015": "6.x",
        "babel-preset-react": "6.x",
        "babel-preset-stage-1": "6.x",
        "babel-plugin-transform-runtime": "6.x"
    },

    "scripts": {
        "start"         : "webpack-dev-server --port 8082 --content-base ./ -d",

        "build:demo": "rm -rf dist & env NODE_ENV=\"demo\" webpack",
        "build": "babel --out-dir ./lib ./src",
        "bundle": "env NODE_ENV=\"development\" webpack",
        "bundle:min": "env NODE_ENV=\"production\" webpack",
        "prepublish": "rm -rf lib & rm -rf dist & npm run build & npm run bundle & npm run bundle:min",

        "test": "env NODE_ENV=\"test\" mocha --compilers js:babel-register --recursive  --timeout 200",
        "test:watch": "npm test -- --watch --bail"
    }
}
